<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg_plat_back"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/common_white_toolbar"
        android:id="@+id/top_layout"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/top_layout"
        android:overScrollMode="never"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorYellow"
                android:text="@string/road_report"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/large_txt"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="@dimen/medium_txt"
                android:textColor="@color/white"
                android:id="@+id/content_tv"
                />
            <com.anshi.linhaitransport.selfview.CanScorllRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_recycler"
                android:overScrollMode="never"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorYellow"
                android:text="解决方案"
                android:id="@+id/solution_tv"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/large_txt"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/medium_txt"
                android:textColor="@color/white"
                android:padding="10dp"
                android:id="@+id/deal_tv"
                android:textColorHint="@color/white"
                />
            <com.anshi.linhaitransport.selfview.CanScorllRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deal_recycler"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>